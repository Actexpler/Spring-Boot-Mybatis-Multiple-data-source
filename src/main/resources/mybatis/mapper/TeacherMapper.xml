<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.testdatasource.mapper.TeacherMapper">
    <resultMap id="BASE_MAP" type="com.example.testdatasource.pojo.Teacher">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>
    <!--Teacher getTeacher(String id);-->
    <select id="getTeacher" resultMap="BASE_MAP">
        select * from teacher
        where id = #{id}
    </select>
</mapper>